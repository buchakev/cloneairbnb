<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <h2>Inscription</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder: "Nom Complet" %>
      </div>
    
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse e-mail" %>
      </div>
      
      <div class="form-group">
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Mot de passe (6 caractÃ¨res minimum)" %>
      </div>
      
     
      
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation du mot de passe" %>
      </div>
      
      <br>
      
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    
    <% end %>
    
    
    <%= render "devise/shared/links" %>

  </div>
</div>